<!--Page administrateurs affichants les playlists-->

{% extends "baseadmin.html.twig" %}
{% block body %}
    <table class="table table-striped"> <caption> Gestion des Playlists </caption>
    <p class="text-end">
        <a href="{{ path('admin.playlists.ajout') }}" class="btn btn-primary">Ajout une nouvelle playlists</a>
    </p>
        <thead>
            <tr>
                <th>Nom</th>
                
            </tr>
        </thead>
        <tbody>
            {% for playlist in playlists %}
                <tr>
                    <td> <h5 class="text-primary">{{ playlist.name }}</h5> </td>
                    <td>
                        <a href="{{ path('admin.playlists.edit', {id:playlist.id}) }}" class="btn btn-secondary">Editer</a>
                        <a href="{{ path('admin.playlists.suppr', {id:playlist.id}) }}" class="btn btn-danger" onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer {{playlist.name}} ?')">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody> 
    </table>
{% endblock %}