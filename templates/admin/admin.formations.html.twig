{% extends "baseadmin.html.twig" %}
{% block body %}
    <table class="table table-striped"> <caption> Gestion des Formations </caption>
    <p class="text-end">
        <a href="{{ path('admin.formations.ajout') }}" class="btn btn-primary">Ajout une nouvelle formation</a>
    </p>
        <thead>
            <tr>
                <th>Titre</th>
                <th>Description</th>
                <th>Date publication</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for formation in formations %}
                <tr>
                    <td> <h5 class="text-primary">{{ formation.title }}</h5> </td>
                    <td> {{ formation.Description }}</td>
                    <td> {{ formation.publishedatstring }}</td>
                    <td>
                        <a href="{{ path('admin.formation.edit', {id:formation.id}) }}" class="btn btn-secondary">Editer</a>
                        <a href="{{ path('admin.formation.suppr', {id:formation.id}) }}" class="btn btn-danger" onclick="return confirm('Etes-vous sÃ»r de vouloir supprimer {{formation.title}} ?')">Supprimer</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody> 
    </table>
{% endblock %}